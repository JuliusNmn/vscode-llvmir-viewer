{
	"name": "vscode-llvmir-viewer",
	"displayName": "LLVM IR Viewer",
	"description": "View LLVM IR contained in binaries using -fembed-bitcode",
	"version": "0.0.1",
	"publisher": "vscode-samples",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "hhttps://github.com/JuliusNmn/vscode-llvmir-viewer"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"main": "./out/extension.js",
	"languages": [
		{
		  "id": "llvmir",
		  "extensions": [
			".o"
		  ],
		  "aliases": [
			"Binary"
		  ]
		}
	  ],
	"contributes": {
		"commands": [
			{
				"command": "llvm-ir-viewer.show-embedded-bitcode",
				"title": "Show embedded LLVMIR",
				"category": "Embedded LLVM IR Bytecode Viewer"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "llvm-ir-viewer.show-embedded-bitcode",
					"when": "resourceLangId == .o"
				}
			],
			"editor/title": [
				{
					"command":  "llvm-ir-viewer.show-embedded-bitcode",
					"when": "resourceExtname == .o",
					"group": "navigation"
				}
			],
			"editor/title/context": [
				{
					"command":  "llvm-ir-viewer.show-embedded-bitcode",
					"when": "resourceExtname == .o",
					"group": "navigation"
				}
			],
			"explorer/context": [
				{
					"command": "llvm-ir-viewer.show-embedded-bitcode",
					"when": "resourceExtname == .o",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"title": "LLVM IR Bytecode Viewer",
			"properties": {
				"config.llvm-ir-viewer.editorTitleBar": {
					"type": "boolean",
					"default": true,
					"description": "Whether the title bar button shows the verbose output by default"
				},
				"config.llvm-ir-viewer.editorTitleBarContextMenu": {
					"type": "boolean",
					"default": true,
					"description": "Whether the title bar button shows the verbose output by default"
				},

				"config.llvm-ir-viewer.explorerContextMenu": {
					"type": "boolean",
					"default": true,
					"description": "Whether the title bar button shows the verbose output by default"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -w -p ./"
	},
	"devDependencies": {
		"@types/node": "^16.18.34",
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"eslint": "^8.26.0",
		"typescript": "^5.3.2"
	}
}
